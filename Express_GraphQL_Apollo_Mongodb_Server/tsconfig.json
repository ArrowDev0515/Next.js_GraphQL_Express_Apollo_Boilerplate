{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "removeComments": true,
    "importHelpers": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*",
      ]
    },
  },
  "include": [
    "server/**/*",
    "config/**/*",
    "index.ts"
  ],
  "exclude": [
    "typings/*",
    "node_modules"
  ]
}